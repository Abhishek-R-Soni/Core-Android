<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DemoRadioGroupActivity">


    <EditText
        android:id="@+id/msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="typing..."
         />

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/rcolor"
            android:layout_width="108dp"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/rdRed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Red"
                tools:text="Red" />

            <RadioButton
                android:id="@+id/rdGreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Green" />

            <RadioButton
                android:id="@+id/rdBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Blue" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/ralign"
            android:layout_width="108dp"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/rdCenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Center"
                tools:text="Center" />

            <RadioButton
                android:id="@+id/rdLeft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Left" />

            <RadioButton
                android:id="@+id/rdRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Right" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/rsize"
            android:layout_width="108dp"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/rdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5" />

            <RadioButton
                android:id="@+id/rds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7" />

            <RadioButton
                android:id="@+id/rdn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>